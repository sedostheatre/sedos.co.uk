@model IDocument

<div class="col-md-3 col-sm-6 news-card-container">
    <div class="card border-0 text-white bg-light-blue news-card mb-3 mb-md-0">
        <div class="card-header">
            <h4 class="card-title">@Model["title"]</h4>
        </div>
        <div class="card-body">
            @{
                var extract = Model.Get("extract", "");
                extract = string.IsNullOrEmpty(extract) ? (string)Model["Excerpt"] : extract;
            }
            <p class="card-text news-excerpt">@Html.Raw(extract)</p>
        </div>
        <div class="card-footer text-muted">
            <a href="@Context.GetLink(Model)" >
                Read the full article
            </a>
        </div>
    </div>
</div>
