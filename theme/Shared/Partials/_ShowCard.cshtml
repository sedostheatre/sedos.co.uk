@model IDocument

<div class="col-md-4 show-card-wrapper">
    <a href="@Context.GetLink(Model)" class="show-card-link">
        @{
            var homePageImageDocument = Model.Get("HomePageImage") as IDocument;
            var link = homePageImageDocument == null ? "" : Context.GetLink(homePageImageDocument);
        }
        <div class="show-card" style="background-image: url(@link)">
            <div class="show-details">
                <h2 class="show-title">@Model["title"]</h2>
                <div class="show-byline">@Model["byline"]</div>
            </div>
        </div>
    </a>
    <!-- show dates made friendly -->
</div>
