@model IDocument

<div class="col-md-3 col-sm-6 show-card-wrapper">
    <a href="@Context.GetLink(Model)" class="show-card-link">
        @{
            var flyer = Model.Get("flyer") as IDocument;
            var link = flyer == null ? "" : Context.GetLink(flyer);
        }
        <div class="show-card" style="background-image: url(@link)">
        </div>
    </a>
</div>
