@{
    Layout = "_Default";
}

<div class="page-wrapper bg-light">
    @{
        if(Model.Get("display-carousel", false))
        {
            var headerImage = Model.Get<IDocument>("header-image", null);
            IEnumerable<IDocument> headerImages;
            if(headerImage == null)
            {
                headerImages = Documents["FallbackHeaders"].ToList();
            }
            else
            {
                headerImages = new [] { headerImage };
            }

            Html.RenderPartial("Partials/_HeaderCarousel", headerImages);
        }
    }
    @if(!Model.Get<bool>("hide-top-title", false))
    {
        <div class="banner">
            <div class="container">
                <h1>@Model["title"]</h1>
            </div>
        </div>
    }

    @{
        if(Model.Get<bool>("use-container", false))
        {
            <div class="container">
                @RenderBody()
            </div>
        }
        else
        {
            @RenderBody();
        }
    }
</div>
