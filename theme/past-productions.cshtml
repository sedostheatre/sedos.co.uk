---
title: Past productions
header-image: assets/images/headers/SedosWebsite-Banner-redcurtain.jpg
---

<div class="page-wrapper bg-light">
    @{
        Html.RenderPartial("Partials/_HeaderCarousel");
    }
    <div>
        @{
            var pastShows = Documents["AllShows"]
                .Where(show => show.Get("showtimes", Enumerable.Empty<IDocument>()).All(x => x.Get<DateTime>("time") < DateTime.Now))
                .OrderBy(show => show.Get("showtimes", Enumerable.Empty<IDocument>()).Select(x => x.Get<DateTime>("time")).OrderBy(x => x).FirstOrDefault())
                .GroupBy(show => show.Get("year"))
                .OrderByDescending(grouping => grouping.Key);

            foreach(var grouping in pastShows)
            {
                <div class="banner">
                    <div class="container">
                        <h1 id="@grouping.Key">@grouping.Key</h1>
                    </div>
                </div>
                <div class="past-shows-section">
                    <div class="container">
                        <div class="row">
                            @foreach(var show in grouping)
                            {
                                Html.RenderPartial("Partials/_ShowArchiveCard", show);
                            }
                        </div>
                    </div>
                </div>
            }
        }
      
        <div class="past-shows-section">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <p class="text-center text-white">
                            We are still working on uploading our whole show archive stretching back to 1906 to this new website - meanwhile, check out the <a href="https://archive.sedos.co.uk/archive/index.htm" class="text-white">back catalogue here</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</div>
