---
title: About
---

@{
    var sectionRows = Documents["AboutSections"]
        .GroupBy(section => section.Get<int>("about-row"))
        .OrderBy(grouping => grouping.Key);

    foreach(var sectionRow in sectionRows)
    {
        <div class="about-section">
            <div class="container">
                <div class="row">
                    @foreach(var aboutSection in sectionRow.OrderBy(row=>row.Get<int>("about-column")))
                    {
                        <div class="col-md">
                            <a href="@Context.GetLink(aboutSection)">
                                <div class="card border-0 text-white bg-light-blue mb-3 mb-md-0 about-card">
                                    <div class="card-header">
                                        <h4 class="card-title">@aboutSection["title"]</h4>
                                    </div>
                                    <img class="card-img-top" src="@Context.GetLink((IDocument)aboutSection["about-image"])">
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}

