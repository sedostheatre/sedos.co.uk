<div class="header-carousel">
    <div class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            @{
                var firstShow = Documents["UpcomingShows"].First();

                Html.RenderPartial("Partials/_HomePageCarouselItem", Tuple.Create(firstShow, true));

                foreach(var show in Documents["UpcomingShows"].Skip(1)) 
                {
                    Html.RenderPartial("Partials/_HomePageCarouselItem", Tuple.Create(show, false));
                }                
            }            
        </div>
    </div>
</div>

<div class="banner"> 
    <div class="container">
        <h2>News</h2>
    </div>
</div>
<div class="container">
    <ul>
        @{
            foreach(var newsItem in Documents["LatestNews"])
            {
                <li><a href="@Context.GetLink(newsItem)">@newsItem["Title"]</a></li>
            }
        }
    </ul>
</div>
