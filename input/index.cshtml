<div class="header-carousel">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            @{
                var firstHeaderImage = Documents["HeaderImages"].First();
                <div class="carousel-item header-carousel-image active" style="background-image: url(@Context.GetLink(firstHeaderImage))">
                </div>
            }
            
            @foreach(var headerImage in Documents["HeaderImages"].Skip(1))
            {
                <div class="carousel-item header-carousel-image" style="background-image: url(@Context.GetLink(headerImage))">
                </div>
            }
        </div>
    </div>
</div>

<div class="upcoming-shows-container">
    <div class="banner">
        <div class="container">
            <h2>Upcoming shows</h2>
        </div>
    </div>

    <div class="upcoming-shows">
        <div class="container">
            <div class="row">        
                @{
                    var upcomignShows = Documents["UpcomingShows"]
                        .Where(show => show.Get<IEnumerable<DateTime>>("showtimes").Any())
                        .OrderBy(show => show.Get<IEnumerable<DateTime>>("showtimes").OrderBy(x => x).FirstOrDefault())    
                        .Take(3);
                    foreach(var document in upcomignShows) 
                    {
                        Html.RenderPartial("Partials/_ShowCard", document);
                    }
                }
            </div>
        </div>
    </div>
</div>

