#n Wyam.Markdown
#n Wyam.Yaml
#n Wyam.Html
#n Wyam.Razor
#n Wyam.Metadata
#n Wyam.Sass

Settings["title"] = "Sedos";

Pipelines.Add("Shows",
    ReadFiles("Shows/*.yml"),    
    Yaml()
);

Pipelines.Add("Sass",
    ReadFiles("assets/css/main.scss"),
    Sass().WithCompactOutputStyle(),
    WriteFiles()
);

Pipelines.Add("Index",
	ReadFiles("*.md"),    
	FrontMatter(Yaml()),
	Markdown(),
    Concat(ReadFiles("*.cshtml")),
    Razor(),
	WriteFiles(".html")
);
